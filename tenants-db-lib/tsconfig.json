{
    "compilerOptions": {
      "moduleResolution": "node",
      "removeComments": false,
      "sourceMap": true,
      "target": "ES2022",
      "outDir": "build",
      "declaration": true,
      "strict": true,
      "module": "ESNext",
      "noEmitOnError": true,
      "lib": ["ES2022", "DOM"],
      "esModuleInterop": false,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
    },
    "include": ["db/schema.ts", "src/**/*"],
  }