---
import { actions, isInputError,  } from "astro:actions";

const { tenant_id, business_name, tenant_name, email } = Astro.props;

const result = Astro.getActionResult(actions.tenants.addTenant);
const error = result?.error;
if (!error) {
  Astro.redirect("/");
}

const inputErrors = isInputError(result?.error) ? result.error.fields : {};
---

<form id="tenantAddForm" method="POST" action={actions.tenants.addTenant} class="mb-8">    
    <div class="mb-4">
      <label for="name">Business Name:</label>
      <input
        type="text"
        id="business_name"
        name="business_name"
        required
        class="w-full p-2 border rounded"
        value={business_name}
      />
      {inputErrors.business_name &&
      <p class="text-red-500">{inputErrors.business_name}</p>
      }
    </div>
    <div class="mb-4">
        <label for="name">Tenant Name:</label>
        <input
          type="text"
          id="tenant_name"
          name="tenant_name"
          required
          class="w-full p-2 border rounded"
          value={tenant_name}
        />
        {inputErrors.tenant_name &&
        <p class="text-red-500">{inputErrors.tenant_name}</p>
        }
      </div>
  
    <div class="mb-4">
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full p-2 border rounded"
        value={email}
      />
      {inputErrors.email &&
      <p class="text-red-500">{inputErrors.email}</p>
      }
    </div>
    
    <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded">
      Create Tenant
    </button>
    <a href="/" class="btn btn-ghost rounded">Cancel</a>
  </form>

  <script>
    import { actions } from 'astro:actions';
  import { navigate } from 'astro:transitions/client';

  const form = document.querySelector('tenantAddForm') as HTMLFormElement;
  form?.addEventListener('submit', async (event) => {
    event.preventDefault();
    const formData = new FormData(form);
    const { error } = await actions.tenants.addTenant(formData);
    if (!error) navigate('/');
  })
  </script>