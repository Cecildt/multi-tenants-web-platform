---
import NavBar from '../components/menus/NavBar.astro'
import ProductsGrid from '../components/grids/ProductsGrid.astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Tenants Admin Platform</title>
  </head>
  <body class="base-200">
    <NavBar title="Products" />
    <div class="flex">
      <div class="size-14 flex-none"></div>
      <div class="size-32 grow">
        <div class="flex-row">
          <ul
            class="menu menu-vertical lg:menu-horizontal bg-base-200 rounded-box"
          >
            <li><a>Add Product</a></li>
            <li><a>Order By</a></li>
            <li><a>Filter By</a></li>
          </ul>
        </div>
        <div class="flex-row">
          <ProductsGrid />
        </div>
      </div>
      <div class="size-14 flex-none"></div>
    </div>
  </body>
</html>
